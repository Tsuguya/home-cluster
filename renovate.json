{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": ["/apps/.+\\.yaml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/manifests/.+\\.yaml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/apps/qnap-csi\\.yaml$"],
      "matchStrings": [
        "repoURL: https://github\\.com/qnap-dev/QNAP-CSI-PlugIn\\.git\\s+targetRevision: (?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "qnap-dev/QNAP-CSI-PlugIn"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true
    },
    {
      "description": "Group rook-ceph packages",
      "matchPackagePatterns": ["rook-ceph"],
      "groupName": "rook-ceph"
    },
    {
      "description": "Automerge Docker image minor updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "description": "Do not automerge critical infrastructure",
      "matchPackageNames": ["cilium", "rook-ceph", "rook-ceph-cluster", "tetragon"],
      "automerge": false
    }
  ]
}
