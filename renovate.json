{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": ["/apps/.+\\.yaml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/manifests/.+\\.yaml$/"]
  },
  "packageRules": [
    {
      "description": "Automerge patch updates",
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true
    },
    {
      "description": "Group rook-ceph packages",
      "matchPackagePatterns": ["rook-ceph"],
      "groupName": "rook-ceph"
    },
    {
      "description": "Automerge alpine minor updates",
      "matchPackageNames": ["alpine"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Do not automerge critical infrastructure",
      "matchPackageNames": ["cilium", "rook-ceph", "rook-ceph-cluster"],
      "automerge": false
    }
  ]
}
